<BorderPane styleClass="brdEmpProf" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@../../css/global.css" />
      <URL value="@../../css/screens/employee_profile_screen_layout.css" />
   </stylesheets>
   <top>
      <Label styleClass="topLabel" text="Employee Profile" />
   </top>
   <center>
      <HBox styleClass="hboxEmp" BorderPane.alignment="CENTER">
         <children>
            <GridPane styleClass="gridEmp">
               <children>
                  <Label styleClass="lblEmp" text="Name:" />
                  <Label styleClass="lblEmp" text="DOB:" GridPane.rowIndex="1" />
                  <Label styleClass="lblEmp" text="Designation:" GridPane.rowIndex="2" />
                  <Label styleClass="lblEmp" text="Mobile.No:" GridPane.rowIndex="3" />
                  <Label styleClass="lblEmp" text="Email:" GridPane.rowIndex="4" />
                  <Label styleClass="lblEmp" text="Salary:" GridPane.rowIndex="5" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
            <GridPane styleClass="gridEmp">
               <children>
                  <Label styleClass="lblEmp" text="Gender:" />
                  <Label styleClass="lblEmp" text="Address:" GridPane.rowIndex="1" />
                  <Label styleClass="lblEmp" text="ID Proof:" GridPane.rowIndex="2" />
                  <Label styleClass="lblEmp" text="ID Proof no:" GridPane.rowIndex="3" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField styleClass="txtField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
            </GridPane>
         </children>
      </HBox>
   </center>
   <bottom>
      <VBox styleClass="btm" BorderPane.alignment="CENTER">
         <children>
            <HBox styleClass="btnContainer">
               <children>
                  <Button mnemonicParsing="false" text="Add">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="mainbtn" />
                     </styleClass>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
                  <Button mnemonicParsing="false" text="Update">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="otherbtn" />
                     </styleClass>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
                  <Button mnemonicParsing="false" text="Delete">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="otherbtn" />
                     </styleClass>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin></Button>
                  <Button mnemonicParsing="false" text="Cancel">
                     <styleClass>
                        <String fx:value="btn" />
                        <String fx:value="otherbtn" />
                     </styleClass></Button>
               </children>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </HBox>
            <TableView>
              <columns>
                <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Sr.No" />
                <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Name" />
                  <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="DOB" />
                  <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Designation" />
                  <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Salary" />
                  <TableColumn maxWidth="-1.0" minWidth="-1.0" prefWidth="-1.0" text="Mobile Number" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </bottom>
</BorderPane>
